{
  "exclude": [".vscode", "test", "lib"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES2016", "ES2017", "ES2018", "ES2019"],
    "strict": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "downlevelIteration": true
  }
}
